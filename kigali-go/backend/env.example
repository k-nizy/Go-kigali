# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/kigali_go_db
SQLALCHEMY_DATABASE_URI=postgresql://username:password@localhost:5432/kigali_go_db

# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-here
DEBUG=True

# External APIs
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
GOOGLE_DIRECTIONS_API_KEY=your-google-directions-api-key

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Rate Limiting
RATELIMIT_STORAGE_URL=memory://

# File Upload
MAX_CONTENT_LENGTH=16777216  # 16MB
UPLOAD_FOLDER=uploads

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ACCESS_TOKEN_EXPIRES=3600  # 1 hour

# Logging
LOG_LEVEL=INFO
