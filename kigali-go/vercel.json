{
  "version": 2,
  "name": "kigali-go",
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.py"
    },
    {
      "source": "/:file*",
      "destination": "/frontend/:file"
    },
    {
      "source": "/(.*)",
      "destination": "/frontend/"
    }
  ]
}

